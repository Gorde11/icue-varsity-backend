# Environment Variables Template
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d
REFRESH_TOKEN_EXPIRE=30d

# Database Configuration (PostgreSQL)
# Will be configured in Phase 7
DB_HOST=localhost
DB_PORT=5432
DB_NAME=icue_varsity_college
DB_USER=postgres
DB_PASSWORD=your-password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Mobile Money Payment APIs
# M-Pesa (Vodacom Tanzania)
MPESA_API_KEY=your-mpesa-api-key
MPESA_API_SECRET=your-mpesa-api-secret
MPESA_MERCHANT_CODE=your-merchant-code
MPESA_CALLBACK_URL=https://yourdomain.com/api/payments/callback

# Airtel Money
AIRTEL_CLIENT_ID=your-airtel-client-id
AIRTEL_CLIENT_SECRET=your-airtel-secret
AIRTEL_CALLBACK_URL=https://yourdomain.com/api/payments/callback

# Tigo Pesa
TIGO_API_KEY=your-tigo-api-key
TIGO_API_SECRET=your-tigo-secret
TIGO_CALLBACK_URL=https://yourdomain.com/api/payments/callback

# WooCommerce Integration
WOOCOMMERCE_URL=https://your-woocommerce-site.com
WOOCOMMERCE_CONSUMER_KEY=your-woocommerce-key
WOOCOMMERCE_CONSUMER_SECRET=your-woocommerce-secret

# File Storage (AWS S3 or Azure)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET=icue-varsity-college
AWS_REGION=us-east-1

# Email Configuration (SendGrid or AWS SES)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@icuevarsitycollege.com

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-email

# Zoom Configuration (for virtual classes)
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-secret

# SMS Configuration (Twilio or Africa's Talking)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (Sentry)
SENTRY_DSN=your-sentry-dsn

# Payment Callback URL
PAYMENT_CALLBACK_URL=https://yourdomain.com/api/payments/callback
